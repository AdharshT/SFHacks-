<header>
    <div class="homepage">
        <nav>
            <h2>Where to Start?</h2>
            <ul>
                <li><a class="nav-items" href="/">Home</a></li>
                <li><a class="nav-items" href="/register">Registration</a></li>
                <li><a class="nav-items" href="/post">Post</a></li>
                {{#if isLoggedIn}}
                    <li><a id="logout-button" class="nav-items">Log Out</a></li>
                {{else}}
                    <li><a class="nav-items" href="/login">Login</a></li>
                {{/if}}
            </ul>
        </nav>
    </div>
    <div>
        <form method="GET" action="/posts/search" enctype="application/x-www-form-urlencoded">
            <input id="search-text" class="search-text" placeholder="Search" name="searchTerm" type="text" value="{{searchValue}}">
            <button type="submit" class="search-button fas fa-search">Search</button>
        </form>
    </div>
</header>